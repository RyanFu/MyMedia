<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_system_video_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.xuchengpu.myproject.myproject.activity.SystemVideoPlayer">

    <com.xuchengpu.myproject.myproject.view.VideoView
        android:id="@+id/videoview"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include android:id="@+id/mediacontroller"
        layout="@layout/mediacontroller"/>

</RelativeLayout>
