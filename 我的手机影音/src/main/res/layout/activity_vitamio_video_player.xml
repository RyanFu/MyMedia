    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.xuchengpu.myproject.myproject.activity.SystemVideoPlayer">

    <com.xuchengpu.myproject.myproject.view.VitamioVideoView
        android:id="@+id/VitamioVideoView"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include android:id="@+id/mediacontroller"
        layout="@layout/mediacontroller"/>
    <include android:id="@+id/ll_loading" layout="@layout/loading"/>
